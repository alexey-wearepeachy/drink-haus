<!-- Okendo main script to boostrap all HTML elements on load -->
<script>
  (function () {
      function asyncLoad() {
          // Replace the query param ?shop=<xxx> with the api domain of your shop.
          var urls = ["https:\/\/d3hw6dc1ow8pp2.cloudfront.net\/reviewsWidget.min.js?shop=drinkhaus.myshopify.com"];
          for (var i = 0; i < urls.length; i++) {
              var s = document.createElement("script");
              s.type = "text/javascript";
              s.async = true;
              s.src = urls[i];
              var x = document.getElementsByTagName("script")[0];
              x.parentNode.insertBefore(s, x);
          }
      }
      if (window.attachEvent) {
          window.attachEvent("onload", asyncLoad);
      } else {
          window.addEventListener("load", asyncLoad, false);
      }
  })();
</script>

