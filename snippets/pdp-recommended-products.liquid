{% assign related_products = data | split: "|" %}

<section class="recommended-products b-top-french -mt-5 bpm-mt-60">
  <div class="container">
    <div class="bpm-d-flex bpm-f-row bpm-align-center bpm-justify-between -py-60 bpm-py-30 -shrink-0">
      <h3 class="eyebrow -tac bpm-tal -no-mt -mb-30 col-md-6 col-lg-4 bpm-no-my">{% if title != blank %}{{ title }}{% else %}You may also like:{% endif %}</h3>
      <div class="w-100 -d-flex -f-col -align-center col-md-18 bpm-f-row -justify-center bpm-f-nowrap bpm-justify-between">
        {% for prod in related_products %}
          {%- assign clean_handle = prod | replace: '["', '' | replace: '"]', '' -%}
          {% assign p = all_products[clean_handle] %}
          <div class="link-wrap -tac bpm-tar bpm-mb-0">
            <a class="tdn -s-heading ros text-soul text-soft-gray-hover" href="{{ p.url }}">{{ p.title }}</a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>