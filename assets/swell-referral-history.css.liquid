



@media (min-width: 768px) {
	.refe-history-grid-table {
		padding-right: 60px;	
	}
}

.refe-history-grid-table h3 {
	max-width: 400px;
}

.refe-history-grid-table-section {
	margin-bottom: 50px;
}


.history-grid table{
	background-color: unset;
	margin-bottom: 4rem;
	width: 100%;
}
.history-grid table th{
	font-weight: normal;
}
.history-grid table tr th:after, .history-grid table tr td:after{
	border-bottom: unset;
}
.history-grid table tr td,
.history-grid table tr td th{
	border-bottom: 1px solid #c5c5c5;
}
.history-main a{
	margin-bottom: 3rem;
}
.hidden-div{
	display: none;
}
.history-grid h4{
	font-size: 30px;
}

.showing-div{
	display: block;
}