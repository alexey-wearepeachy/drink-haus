	.referral-and-history{
		zoom:1;
	}
	
	.header-refer{
		flex-direction: column;
		justify-content: center;
		margin: 0 2rem 2rem;
	}
	.header-refer div{
		width: 100%;
    	margin-left: 0;
	}
	.referral-and-history .img-header{
		content: url({{'swell-refer-mob.jpg' | asset_url}})
	}
	.main-refer{
		margin-top: 2rem;
