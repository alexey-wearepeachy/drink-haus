

.header-refer{
	display: flex;
    align-items: baseline;
    margin-bottom: 2rem;
}
.header-refer div{
    width: 45%;
    margin-left: 4%;
}
.wrap-img img{
	width: 100%;
}
.main-refer{
	display: flex;
	flex-direction: column;
    justify-content: space-between;
    margin-top: 4rem;
}

@media (min-width: 900px) {
	.main-refer {
		flex-direction: row;
	}
}

.referral-grid{
	width: 100%
}

@media (min-width: 900px) {
	.referral-grid{
		width: 50%
	}
}

.referral-grid .refer-explain {
	margin-bottom: 2rem;
}
.referral-grid form{
	width: 100%;
	flex-wrap: wrap;
	flex-direction: column;
}

.referral-grid label{
	width: 80%;
	display: flex;
	flex-wrap: wrap;
}


.referral-grid label .error-message {
	width: 100%;
	margin-top: 5px;
	font-size: 12px;
}

.referral-grid input[type="submit"] {
	padding-right: 0;
	margin-left: 0;
}

.referral-grid input[type = text] {
	width: 80%;
  border-bottom: 1px solid #666464;
	padding-right: 1rem;
}

.referral-grid input[type = submit] {
  width: 20%;
}

.hidden-form{
	display: none;
}

.showing-form{
	display: flex;
}
.share-link-grid{
	display: flex;
	width: max-content;
	max-width: 100%;
	flex-wrap: wrap;
}
.share-link-grid span {
	margin-top: 0;
	margin-bottom: 0;
}
.div-icon{
	display: flex;
	margin-right: 9px;
	align-items: center;
}
.div-icon a{
	margin-right: 7px;
}
.div-icon p{
	font-size: inherit;
	margin-bottom: 0;
}

.popup-background{
	position: fixed;
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100vh;
	width: 100vw;
	top: 0;
	right: 0;
	backdrop-filter: blur(7px);
	z-index: 3333;
}

.popup-body{
    text-align: center;
    background-color: black;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    padding: 3rem 1rem;
    min-width: 30rem;
}

.popup-close{
	font-size: x-large;
    color: white;
    top: 2rem;
    right: 2rem;
    transform: translate(+50%, -50%);
	cursor: pointer;
	position: absolute;
	text-align: center;
	z-index: 3333;
}

.popup-body h4,.popup-body h1, .popup-body p{
	color: white;
}

.copy-link-button{
position: relative;
  display: inline-block;
  background-color: color(soul);
  border: 1px solid color(soul);
  color: color(white);
  text-align: center;
  padding: 18px 32px;
  text-decoration: none;
  text-transform: uppercase;
  transform: translateZ(0);
  transition: background-color 400ms ease-in-out, color 400ms ease-out;
  letter-spacing: 0.0625rem;
  min-width: 180px;
  cursor: pointer;
  outline: 0;

  &:before {
    content: '';
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: color(nurse);
    color: #fff;
    transform: scaleX(0);
    transform-origin: 0 50%;
    transition: 400ms ease-in-out;
  }

  &:hover,
  &:hover:focus {
    color: color(black);
  }

  &:hover:before {
    background: color(nurse);
    transform: scaleX(1);
    transform-origin: 100% 0;
  }

  &:focus {
    color: color(white);
  }

  &.is-disabled {
    cursor: not-allowed;
  }

  color: color(black);

  &:before {
    background: color(nurse);
    transform: scaleX(1);
    transform-origin: 100% 0;
  }

  &:hover {
    color: color(white);
  }

  &:hover:before {
    transform-origin: 0 50%;
    transform: scaleX(0);
  }
	
}

.referral-and-history {
	padding-bottom: 10vh;
}


