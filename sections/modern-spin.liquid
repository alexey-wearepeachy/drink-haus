{% render 'content-block' with 
  title: section.settings.title, 
  copy: section.settings.copy, 
  image: section.settings.image,
  image_last: false;
%}


{% schema %}
  {
    "name": "Modern Spin",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title"
      },
      {
        "id": "copy",
        "type": "richtext",
        "label": "Copy"
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "Featured Image"
      }
    ],
    "presets": [
      {
        "name": "Modern Spin"
      }
    ]
  }
{% endschema %}
