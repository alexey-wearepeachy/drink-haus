  title: section.settings.title, 
  image: section.settings.image, 
  copy: section.settings.copy,
  spotify: section.settings.spotify
%}


{% schema %}
  {
    "name": "Billboard Social",
    "settings": [
      {
        "id": "image",
        "type": "image_picker",
        "label": "Featured Image"
      },
      {
        "id": "title",
        "type": "text",
        "label": "Title"
      },
      {
        "id": "copy",
        "type": "text",
        "label": "Copy"
      },
      {
        "id": "spotify",
        "type": "url",
        "label": "Spotify URL"
